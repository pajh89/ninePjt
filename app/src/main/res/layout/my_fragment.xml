<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/logo_selfie_my" />

        <TextView
            android:id="@+id/profileId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/profilePic"
            android:layout_toRightOf="@+id/profilePic"
            android:layout_weight="10"
            android:padding="5dp"
            android:text="플랫폼 아이디"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/logOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:text="로그아웃"
            android:textSize="13sp" />

        </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>

    <TextView
        android:id="@+id/myRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:text="내 계정"
        android:layout_marginLeft="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/myWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="My work"
        android:layout_marginLeft="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/recentF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="최근 본 필터"
        android:layout_marginLeft="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/myFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="내가 구독하는 사람들"
        android:layout_marginLeft="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="12dp"
        android:text="필터 제작자 신청"
        android:layout_marginLeft="10dp"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>


    <TextView
        android:id="@+id/goodNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:text="NineFilta 최대 활용법"
        android:layout_marginLeft="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/settingF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="설정"
        android:layout_marginLeft="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/goodNews2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="서비스 약관 및 개인정보 처리방침"
        android:layout_marginLeft="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/eMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="의견 보내기"
        android:layout_marginLeft="10dp"
        android:textSize="15sp" />


</LinearLayout>