<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">


        <LinearLayout
            android:id="@+id/fstLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/img_port"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/img_samplejpeg2" />

            <TextView
                android:id="@+id/boxNum_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="추 천"
                android:textSize="11sp" />

        </LinearLayout>



        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/fstLinear"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/ptf_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <ImageView
                    android:id="@+id/category_Port"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logo_daily"
                    android:layout_marginLeft="3dp" />

                <TextView
                    android:id="@+id/title_Port"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="필터 이름"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ptf_s"
                android:layout_below="@+id/ptf_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="13sp"
                    android:text="#태그"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="13sp"
                    android:text="#태그"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="13sp"
                    android:text="#태그"/>

            </LinearLayout>

            <TextView
                android:id="@+id/Id_Port"
                android:layout_below="@+id/ptf_s"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:text="by 제작자 아이디"
                android:textSize="12sp" />
        </RelativeLayout>

</RelativeLayout>